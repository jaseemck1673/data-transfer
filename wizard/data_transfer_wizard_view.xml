<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Data Transfer Wizard Form View -->
    <record id="data_transfer_wizard_view_form" model="ir.ui.view">
        <field name="name">data.transfer.wizard.view.form</field>
        <field name="model">data.transfer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="db_id"/>
                </group>
                <footer>
                    <button name="data_fetch" string="Confirm" type="object"
                            class="btn-primary"/>
                    <button name="action_new_db_detail" string="New Database" type="object"
                            />
                </footer>
            </form>
        </field>
    </record>

    <!-- Data Transfer Wizard action  -->
    <record id="data_transfer_wizard_action" model="ir.actions.act_window">
        <field name="name">Data Transfer Wizard</field>
        <field name="res_model">data.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_ids" eval="[Command.clear(),
            Command.create({'view_mode': 'form','sequence': 1, 'view_id': ref('data_transfer_wizard_view_form')}),
        ]"/>
    </record>

</odoo>